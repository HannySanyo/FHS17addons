<odoo>
    <template id="acct_signup_fields_extended" inherit_id="auth_signup.fields" name="Auth Signup: Phone and Attachment fields">
    	<xpath expr="//div[hasclass('field-confirm_password')]" position="after">
            <div class="mb-3 field-phone">
                <label for="phone">Phone Number</label>
                <input type="text" name="phone" t-att-value="phone" id="phone" class="form-control form-control-sm" placeholder="e.g. +13038657377" required="required"/>
            </div>
		</xpath>
    
    </template>

</odoo>