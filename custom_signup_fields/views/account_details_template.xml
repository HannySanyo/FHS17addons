<odoo>
    <data>
        <template id="account_sign_up_details_id" inherit_id="auth_signup.fields" name="Account sign up details">
            <xpath expr="//div[@class='mb-3 field-confirm_password']" position="after">
                <div class="mb-3 field-birthday">
                    <label for="birthday">Your Birthday</label>
                    <input type="date" name="wk_dob" id="birthday" class="form-control form-control-sm" required="required" />
                </div>
                <div class="mb-3 field-custom_field_1">
                    <label for="custom_field_1">Custom File Upload 1</label>
                    <input type="file" name="custom_field_1" id="custom_field_1" class="form-control form-control-sm" required="required" />
                </div>
                <div class="mb-3 field-custom_field_2">
                    <label for="custom_field_2">Custom File Upload 2</label>
                    <input type="file" name="custom_field_2" id="custom_field_2" class="form-control form-control-sm" />
                </div>
            </xpath>
        </template>
    </data>
</odoo>