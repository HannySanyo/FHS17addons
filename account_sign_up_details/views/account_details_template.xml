<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="auth_signup_attachments" inherit_id="auth_signup.signup" name="Allow for attachments fields">
        <xpath expr="//form" position="attributes">
            <attribute name="enctype">multipart/form-data</attribute>
        </xpath>
    </template>
	<template id="auth_signup_extended" inherit_id="auth_signup.fields" name="Account Signup Phone Number">
		<xpath expr="//div[@class='mb-3 field-confirm_password']" position="after">
			<div class="mb-3 field-phone]">
				<label for="phone">Phone Number</label>
				<input type="phone"  name="phone" t-att-value="phone" id="phone" class="form-control form-control-sm" required="required" placeholder="+13038657377" />
			</div>
		</xpath>
        <xpath expr="//div[last()]" position="after">
            <div class="form-group field-login">
                <label for="attachment_contractor">If you are a contractor, please provide contractor license documentation:</label>
                <input type="file" name="attachment_contractor" id="attachment_contractor" class="form-control form-control-sm"/>
            </div>
            <div style="height:50px">
            </div>
            <div class="form-group field-login">
                <label for="attachment_taxexempt">If you are tax exempt, please provide proof of exemption documentation:</label>
                <input type="file" name="attachment_taxexempt" id="attachment_taxexempt" class="form-control form-control-sm"/>
            </div>
        </xpath>
	</template>

</odoo>